<div class="layout">
  <div class="columns">
    <div class="column">
      <div class="poster-wrapper {% if small %}small{% endif %}">
        <img src="{% unless movie.poster contains 'https' %}https://a.ltrbxd.com/resized/film-poster/{% endunless %}{{ movie.poster }}" class="image-dither" style="margin-bottom: 5px">
      </div>
    </div>
    <div class="column">
      <div class="richtext richtext--left gap--large">
        <div class="content content--left gap text--left">
          <p>🍿 {{ movie.title }} ({{ movie.year }})</p>
          <p>🎥 Directed by {{ movie.director }}</p>

          <p></p>

          {{ movie.desc }}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="title_bar">
  <img class="image" src="https://cdn.rknight.me/trmnl/literate-movies.svg">
  <span class="title">{{ trmnl.plugin_settings.instance_name }}</span>
</div>
